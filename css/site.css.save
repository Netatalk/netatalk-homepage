.bg {
	background-color: #424242;
	background-image: url(../gfx/bg.gif);
	background-repeat: no-repeat;
	background-position: 80px 0px;
}
.men {
	font-family: Geneva, Arial, Helvetica, sans-serif;
	font-size: 12px;
	font-weight: normal;
	color: #FFFFFF;
	text-decoration: none;
}
.normal {
	font-family: Geneva, Arial, Helvetica, sans-serif;
	font-size: 13px;
	font-weight: normal;
	color: #000000;
	text-decoration: none;
}
h1 {
	font-family: Geneva, Arial, Helvetica, sans-serif;
	font-size: 16px;
	font-weight: bold;
	color: #000000;
	text-decoration: none;
}
.kursiv {
	font-family: Geneva, Arial, Helvetica, sans-serif;
	font-size: 11px;
	font-style: italic;
	font-weight: normal;
	color: #000000;
	text-decoration: none;
}

a.men, a.men:visited { color: #FFFFFF;
        text-decoration: none;
}

a.normal, a.normal:visited {
	text-decoration: none;
	color: #660000;
}

a, a:visited {
        text-decoration: none;
        color: #660000;
}

